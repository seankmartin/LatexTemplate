	author = {Thomson, A.M and Destexhe, A},
	month = jun,
	year = {1999},
	keywords = {Interareal, Rats, In Vitro},
	pages = {1193--1215},
	file = {1999_thomson_destexhe_dual intracellular recordings and computational models of slow inhibitory.pdf:C\:\\Users\\smartin5\\Google Drive\\PhD\\PaperLibrary\\Neuroscience1999\\1999_thomson_destexhe_dual intracellular recordings and computational models of slow inhibitory.pdf:application/pdf}
